@model IEnumerable<Seashell>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Seashell List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Seashell" asp-action="Add" class="btn btn-primary" >
                <i class="bi bi-patch-plus"></i> &nbsp Add new seashell
            </a>
    </div>
</div>
<br /> <br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Common Name
            </th>
            <th>
                Ocean/Sea
            </th>
            <th>
                Maximum size
            </th>
            <th>
                Variety
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
           <tr>
               <td width="=50%">@obj.Name</td>
               <td width="=50%">@obj.CommonName</td>
               <td width="=50%">@obj.Ocean</td>
               <td width="=20%">@obj.MaxSize</td>
               <td width="=50%">@obj.Variety</td>
               <td width="10%">
                   <div class="w-75 btn-group" role="group">
                            <a asp-controller="Seashell" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil"></i> Edit</a>
                            <a asp-controller="Seashell" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3"></i> Delete
                            </a>
                   </div>
               </td>
         
           </tr> 
        }
    </tbody>

