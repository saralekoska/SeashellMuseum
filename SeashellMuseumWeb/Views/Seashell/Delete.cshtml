@model Seashell

<form method="post" asp-action="DeletePOST">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Delete Seashell</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" disabled class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="CommonName"></label>
            <input asp-for="CommonName" class="form-control" />
            <span asp-validation-for="CommonName" disabled class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Ocean"></label>
            <input asp-for="Ocean" class="form-control" />
            <span asp-validation-for="Ocean" disabled class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="MaxSize"></label>
            <input asp-for="MaxSize" class="form-control" />
            <span asp-validation-for="MaxSize" disabledclass="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Variety"></label>
            <input asp-for="Variety" class="form-control" />
            <span asp-validation-for="Variety" disabled class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-controller="Seashell" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>

</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
